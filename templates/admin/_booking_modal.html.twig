<div class="booking-modal fixed z-30 inset-0 overflow-y-auto hidden" aria-labelledby="login-modal" role="dialog" aria-modal="true">
	<div class="flex items-start justify-center min-h-screen pt-32 px-4 pb-20 text-center">
		<div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
		<!-- This element is to trick the browser into centering the modal contents. -->
		<span class="hidden sm:inline-block sm:align-middle" aria-hidden="true">&#8203;</span>
		<div class="inline-block align-bottom bg-white text-left rounded overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
			<div class="bg-white px-4 pt-5 pb-8 sm:p-6">
				<div class="sm:flex flex-col items-center sm:justify-start">
					<div class="mt-3 text-center sm:mt-0">
						<h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
							Informations sur la r√©servation
						</h3>
						<div class="mt-6">
							<div class="text-sm flex items-start justify-start my-6">
								<p class="font-bold w-24 text-left">Court:</p>
								<div class="flex flex-col items-start">
									<p>{{ court.info.name }}</p>
									<div class="flex justify-start flex-wrap mt-1">
										<div class="flex items-center mr-4 mt-1">
											<p class="flex items-center py-1.5 px-3 text-xs {{ court.info.surface == 'clay' ? 'text-yellow-100 bg-yellow-800' : court.info.surface == 'grass' ? 'text-green-100 bg-green-800' : 'text-blue-100 bg-blue-800' }}">
												<span class="block w-5 h-5 rounded-full mr-2 {{ court.info.surface == 'clay' ? 'bg-yellow-500' : court.info.surface == 'grass' ? 'bg-green-500' : 'bg-blue-500' }}"></span>
												{{ court.info.surfaceFR }}
											</p>
										</div>
										<div class="flex items-center text-xs py-1.5 px-3 mt-1 {{ court.info.cover == true ? 'bg-gray-800 text-gray-100' : 'bg-gray-300 text-gray-900' }}">{{ court.info.cover == true ? 'Couvert' : 'Non-couvert' }}</div>
									</div>
								</div>
							</div>
							<div class="text-sm flex items-center justify-start my-3">
								<p class="font-bold w-24 text-left">Pseudo:</p>
								<p>{{ array.user_pseudo }}</p>
							</div>
							<div class="text-sm flex items-center justify-start my-3">
								<p class="font-bold w-24 text-left">E-mail:</p>
								<p>{{ array.user_email }}</p>
							</div>
							<div class="text-sm flex items-center justify-start mt-5 mb-3">
								<p class="font-bold w-24 text-left">Date:</p>
								<p>{{ '%02d'|format(today) ~ '/' ~ '%02d'|format(month) ~ '/' ~ year }}</p>
							</div>
							<div class="text-sm flex items-center justify-start my-3">
								<p class="font-bold w-24 text-left">Heure:</p>
								<p>{{ hour }}:00</p>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="bg-gray-50 px-4 py-3 sm:px-6 w-full">

				<div class="sm:flex sm:flex-row-reverse sm:justify-between">
					{{ include('admin/_delete_booking.html.twig') }}
					<button type="button" class="booking-modal-hide mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:w-auto sm:text-sm">
						Fermer
					</button>
				</div>

			</div>
		</div>
	</div>
</div>
